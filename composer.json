{
  "name": "typo3-canto/canto-fal",
  "type": "typo3-cms-extension",
  "description": "Adds Canto FAL driver.",
  "homepage": "https://github.com/TYPO3-Canto/canto-fal",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "TYPO3 CMS",
    "Canto",
    "FAL"
  ],
  "authors": [
    {
      "name": "Nicole Hummel",
      "email": "nicole-typo3@nimut.dev",
      "role": "Developer"
    },
    {
      "name": "Tim Schreiner",
      "role": "Developer",
      "email": "tim.schreiner@km2.de"
    },
    {
      "name": "Denis Doerner",
      "role": "Developer",
      "email": "d.doerner@ecentral.de"
    }
  ],
  "require": {
    "php": "^7.4 || ^8",
    "ext-json": "*",
    "typo3/cms-core": "^11 || ^12",
    "typo3/cms-filemetadata": "^11 || ^12",
    "typo3/cms-filelist": "^11 || ^12",
    "guzzlehttp/guzzle": "^6.3 || ^7.3",
    "psr/log": "^1.1 || ^3.0",
    "typo3-canto/canto-api": "@dev"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpstan/phpstan": "^0.12.92",
    "typo3/testing-framework": "^6.8"
  },
  "autoload": {
    "psr-4": {
      "TYPO3Canto\\CantoFal\\": "Classes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "TYPO3Canto\\CantoFal\\Tests\\": "Tests"
    }
  },
  "replace": {
    "typo3-ter/canto-fal": "self.version"
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin",
    "allow-plugins": {
      "typo3/class-alias-loader": true,
      "typo3/cms-composer-installers": true
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .Build/Web/typo3conf/ext/",
      "[ -L .Build/Web/typo3conf/ext/canto_fal ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/canto_fal"
    ],
    "phpcsfixer": "php-cs-fixer fix --config=.php-cs-fixer.dist.php -v --dry-run --using-cache=no --diff",
    "phpcsfixer:fix": "php-cs-fixer fix --config=.php-cs-fixer.dist.php -v --using-cache=no --diff",
    "phpstan": "phpstan analyse -c phpstan.neon"
  },
  "extra": {
    "typo3/cms": {
      "web-dir": ".Build/Web",
      "extension-key": "canto_fal"
    }
  }
}
